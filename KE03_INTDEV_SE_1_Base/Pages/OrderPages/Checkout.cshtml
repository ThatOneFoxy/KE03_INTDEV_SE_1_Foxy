@page
@model Webshop.Pages.OrderPages.CheckoutModel
@{
    ViewData["Title"] = "Stap 1: Gegevens & Bezorging";
}

<h2>Stap 1: Gegevens & Bezorging</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Naam</label>
        <input asp-for="CustomerName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Adres</label>
        <input asp-for="CustomerAddress" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Bezorgmethode</label>
        <select asp-for="DeliveryMethod" class="form-select" required>
            <option value="" disabled selected>-- Kies een optie --</option>
            <option value="Thuisbezorgd">Thuisbezorgd (€0.99)</option>
            <option value="Ophalen">Ophalen (gratis)</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Betaalmethode</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="PaymentMethod" value="iDEAL" required />
            <label class="form-check-label">iDEAL</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="PaymentMethod" value="Creditcard" />
            <label class="form-check-label">Creditcard</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="PaymentMethod" value="PayPal" />
            <label class="form-check-label">PayPal</label>
        </div>
    </div>

    <button type="submit" class="btn btn-danger">Volgende</button>
</form>
