<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KE03_INTDEV_SE_1_Base</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_1_Base.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href=" https: //fonts.googleapis.com/css2?family =Fenix&family =Jersey+10&display =swap">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">M A T R I X  I N C.</a>

                <form class="d-flex mx-auto w-50" role="search">
                    <input class="form-control bg-secondary bg-opacity-50 text-light border-0 rounded" type="search" placeholder="Zoek een product..." aria-label="Search">
                </form>

                <div class="dropdown">
                    <a class="dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/icons/Usr.svg" width="40" height="40" alt="User Icon">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Account/orderhistory">Bestelgeschiedenis</a></li>
                        <li><a class="dropdown-item" href="/Account/Unimplemented">Instellingen</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/Unimplemented">Uitloggen</a></li>
                    </ul>
                </div>
                <div class="cartdiv">
                    <a href="/Cart"><img src="~/icons/Cart.svg" width="40" height="40" alt="Cart Icon"></a>
                </div>
            </div>
        </nav>

        <div class="bg-light-subtle py-2 border-top">
            <div class="container d-flex gap-4 fw-bold fs-5"> 
                @* Make these dropdowns and whatnot for the uhh, or well, just one xD the categories one lol *@
                <a href="/" class="text-dark text-decoration-none">Categorieën <span>&#9662;</span></a>
                <a href="/Unimplemented" class="text-dark text-decoration-none">Nieuw binnen <span>&#9662;</span></a>
                <a href="/Unimplemented" class="text-dark text-decoration-none">OP=OP <span>&#9662;</span></a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KE03_INTDEV_SE_1_Base - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>